<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	id="WebApp_ID" version="3.1">
	<display-name>SKDS</display-name>

	<servlet>
		<servlet-name>home</servlet-name>
		<jsp-file>/view/Home.jsp</jsp-file>
	</servlet>
	<servlet>
		<servlet-name>login</servlet-name>
		<jsp-file>/view/Login.jsp</jsp-file>
	</servlet>
	<servlet>
		<servlet-name>register</servlet-name>
		<jsp-file>/view/Register.jsp</jsp-file>
	</servlet>

	<servlet>
		<servlet-name>getRequestList</servlet-name>
		<servlet-class>controller.GetRequestList</servlet-class>
	</servlet>



	<servlet-mapping>
		<servlet-name>home</servlet-name>
		<url-pattern></url-pattern>
	</servlet-mapping>

	<!-- Services -->
	<servlet-mapping>
		<servlet-name>getRequestList</servlet-name>
		<url-pattern>/app/getRequestList</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>login</servlet-name>
		<url-pattern>/app/login</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>register</servlet-name>
		<url-pattern>/app/register</url-pattern>
	</servlet-mapping>

</web-app>
